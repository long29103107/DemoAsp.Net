                <span asp-validation-for="TongSoPhong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThanhPho" class="control-label">Thành phố</label>
                <input asp-for="ThanhPho" class="form-control" />
                <span asp-validation-for="ThanhPho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuanHuyen" class="control-label">Quận/Huyện</label>
                <input asp-for="QuanHuyen" class="form-control" />
                <span asp-validation-for="QuanHuyen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
